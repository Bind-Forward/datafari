<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>datafari-mcf-scripts-jar-with-dependencies</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>../dist/WEB-INF/classes</directory>
			<includes>
				<include>**/francelabs/manifoldcf/**</include>
			</includes>
			<!-- Copy binaries at the root directory of the jar -->
			<outputDirectory />
		</fileSet>
	</fileSets>
	<!-- Include dependencies of Datafari MCF Scripts -->
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<unpack>true</unpack>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>
</assembly>